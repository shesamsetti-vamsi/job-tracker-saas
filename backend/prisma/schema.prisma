generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  name         String
  email        String     @unique
  passwordHash String
  role         UserRole   @default(USER)
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  emailLogs    EmailLog[]
  jobs         Job[]

  @@index([role])
}

model Job {
  id              String        @id @default(uuid())
  userId          String
  companyName     String
  roleTitle       String
  salaryMin       Int?
  salaryMax       Int?
  status          JobStatus     @default(APPLIED)
  applicationDate DateTime
  interviewDate   DateTime?
  priority        PriorityLevel @default(MEDIUM)
  notes           String?
  isDeleted       Boolean       @default(false)
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  emailLogs       EmailLog[]
  files           File[]
  user            User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  tags            JobTag[]

  @@index([userId])
  @@index([status])
  @@index([applicationDate])
  @@index([userId, status])
  @@index([userId, applicationDate])
}

model Tag {
  id   String   @id @default(uuid())
  name String   @unique
  jobs JobTag[]
}

model JobTag {
  jobId String
  tagId String
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)
  tag   Tag    @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([jobId, tagId])
}

model File {
  id         String   @id @default(uuid())
  jobId      String
  fileUrl    String
  publicId   String
  uploadedAt DateTime @default(now())
  job        Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)

  @@index([jobId])
}

model EmailLog {
  id     String   @id @default(uuid())
  userId String
  jobId  String
  sentAt DateTime @default(now())
  job    Job      @relation(fields: [jobId], references: [id], onDelete: Cascade)
  user   User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([jobId])
}

enum UserRole {
  USER
  ADMIN
}

enum JobStatus {
  APPLIED
  INTERVIEW
  OFFER
  REJECTED
}

enum PriorityLevel {
  LOW
  MEDIUM
  HIGH
}
